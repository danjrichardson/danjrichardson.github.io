---
const { title = false, reverse = false } = Astro.props;
---
<div class="my-12 md:my-20 mx-auto max-w-4xl px-4 xl:px-0 md:grid grid-cols-12 gap-x-10">
    {title && <div class="col-span-12 -order-1">
        <h2 class="font-title text-3xl md:text-5xl gradient-heading uppercase mb-4 md:mb-14">
            <slot name="title" />
        </h2>
    </div>}
    <div class={`col-span-5 mb-2 ${reverse && 'order-1 md:text-right'}`}>
        <slot name="lead-in" />
    </div>
    <div class={`col-span-7 ${reverse && 'order-0 '} font-body-alt space-y-4`}>
        <slot name="copy" />        
    </div>
</div> 