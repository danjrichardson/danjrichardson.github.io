---
export interface Props
{
    url: string
}
const { url } = Astro.props;
---
<style global>
    .arrow-button.group:hover .arrow-1 {
        animation: arrow1-move .75s linear infinite forwards;
    }
    .arrow-button.group:hover .arrow-2 {
        animation: arrow2-move .75s linear infinite forwards;
    }
    .arrow-1, .arrow-2 {
        @apply transform transition-transform;
    }
    .arrow-2 {
        @apply -translate-x-full;
    }
    @keyframes arrow1-move {
        0% { transform: translateX(0%); }
        100% { transform: translateX(200%); }
    }
    @keyframes arrow2-move {
        0% { transform: translateX(-200%); }
        100% { transform: translateX(0%); }
    }
</style>
<a href={url} class="relative py-4 px-6 inline-block border-2 hover:border-transparent border-white/40 transition-colors hover:bg-[#ffffff] group arrow-button">
    <span class="inline-block transform transition-transform ease-in delay-100 group-hover:translate-x-2 font-lead-in uppercase">
        <slot />
    </span>
    <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" class="inline-block ml-4">        
        <path class="arrow-1" d="M21.883 12l-7.527 6.235.644.765 9-7.521-9-7.479-.645.764 7.529 6.236h-21.884v1h21.883z" fill="currentColor"/>
        <path class="arrow-2" d="M21.883 12l-7.527 6.235.644.765 9-7.521-9-7.479-.645.764 7.529 6.236h-21.884v1h21.883z" fill="currentColor"/>
    </svg>
    <div class="absolute bg-black inset-0 z-[-1] transform transition group-hover:delay-200 opacity-0 group-hover:opacity-100 group-hover:translate-x-3 group-hover:translate-y-3"></div>
</a>