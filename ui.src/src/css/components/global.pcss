
@layer components {
    .bg {
        --startDeg: 8deg;
        background-color: #b5bce1;
        background-image: linear-gradient(var(--startDeg), #62ff0000 0%, #50acc8 61%, #2196f3 100%),
            linear-gradient(319deg, #4158D0 0%, #C850C0 31%, #FFCC70 100%);
    }

    .menuButton {
        @apply fixed top-0 right-5 p-5 text-black z-40;  

        
    }

}